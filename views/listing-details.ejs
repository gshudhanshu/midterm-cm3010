<!doctype html>
<html>
  <head>
    <%- include('./partials/head', { pageInfo }) %>
  </head>
  <body>
    <%- include('./partials/header', { pageInfo }) %>

    <div class="container mt-5">
      <div class="row mb-5 gx-5">
        <div class="col-md-6">
          <img
            src="<%= listing.picture_url %>"
            class="img-fluid"
            alt="Listing Image"
          />
          <div class="my-4">
            <div class="row g-3">
              <div class="col-md-4">
                <img
                  src="<%= listing.host_picture_url %>"
                  class="img-fluid rounded-circle"
                  width="150px"
                />
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%= listing.host_name %></h5>
                  <p class="card-text"><%= listing.host_neighbourhood %></p>
                  <p class="card-text"><%= listing.host_about %></p>
                  <a
                    href="/host/<%= listing.host_id %>"
                    class="btn btn-primary my-3"
                    >More info</a
                  >
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <h1 class="mb-3"><%= listing.name %></h1>
          <p><strong>Neighbourhood: </strong><%= listing.neighbourhood %></p>
          <p>
            <strong>Geo location: </strong>latitude: <%= listing.latitude %>
            longitude: <%= listing.longitude%>
          </p>
          <p>
            <strong>Neighbourhood Overview:</strong>
          </p>
          <p><%- listing.neighbourhood_overview %></p>
          <p><strong>Accommodates:</strong> <%= listing.accommodates %></p>
          <p><strong>Bedrooms:</strong> <%= listing.bedrooms %></p>
          <p><strong>Beds:</strong> <%= listing.beds %></p>
          <p><strong>Bathrooms:</strong> <%= listing.bathrooms_text %></p>
          <p><strong>Property type:</strong> <%= listing.property_type %></p>
          <p><strong>Room type:</strong> <%= listing.room_type %></p>
          <p><strong>Amenities:</strong> <%= listing.amenities %></p>
          <p>
            <strong>Availability (in days):</strong> <%=
            listing.availability_365 %>
          </p>
          <p>
            <strong>Review:</strong> â˜… <%= listing.review_scores_rating %>(<%=
            listing.number_of_reviews %>)
          </p>
          <p><strong>Price:</strong> $<%= listing.price %></p>
          <p><strong>Description:</strong></p>
          <p><%- listing.description %></p>
          <div class="row gx-3 mb-3">
            <a
              class="col btn btn-warning me-3"
              href="/listing/edit/<%= listing.listing_id %>"
              >Edit listing</a
            >
            <a class="col btn btn-danger" onclick="deleteResource()"
              >Delete listing</a
            >
            <form
              id="deleteListingForm"
              style="display: none"
              method="post"
              action="/listing/delete/<%= listing.listing_id %>"
            >
              <input
                type="hidden"
                name="listing_id"
                id="listing_id"
                value="<%= listing.listing_id %>"
              />
            </form>
            <script>
              function deleteResource() {
                const deleteForm = document.getElementById('deleteListingForm')
                deleteForm.submit()
              }
            </script>
          </div>
          <div class="row gx-3">
            <a class="col btn btn-primary me-3" href="/"
              >Back to All Listings</a
            >
            <a
              class="col btn btn-primary"
              href="<%= listing.listing_url %>"
              target="_blank"
              >Open on Airbnb</a
            >
          </div>
        </div>
      </div>
    </div>

    <%- include('./partials/footer') %>
  </body>
</html>
