<!DOCTYPE html>
<html>
  <head>
    <%- include('./partials/head', { pageInfo }) %>
  </head>
  <body>
    <%- include('./partials/header', { pageInfo }) %>
    <div class="container my-5">
      <h1>Create New Listing</h1>
      <form action="/listing/add-listing" method="post">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            placeholder="Name"
            required
          />
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            class="form-control"
            id="description"
            name="description"
            rows="3"
            placeholder="Description"
            required
          ></textarea>
        </div>
        <div class="mb-3">
          <label for="neighborhood_overview" class="form-label"
            >Neighborhood Overview</label
          >
          <textarea
            class="form-control"
            id="neighborhood_overview"
            name="neighborhood_overview"
            rows="3"
            placeholder="Neighborhood overview"
            required
          ></textarea>
        </div>
        <div class="mb-3">
          <label for="neighborhood_overview" class="form-label"
            >Amenities</label
          >
          <textarea
            class="form-control"
            id="amenities"
            name="amenities"
            rows="3"
            placeholder="Amenities"
            required
          ></textarea>
        </div>
        <div class="mb-3">
          <label for="accommodates" class="form-label">Neighborhood</label>
          <input
            type="text"
            class="form-control"
            id="accommodates"
            name="accommodates"
            placeholder="Accommodates"
            required
          />
        </div>
        <div class="mb-3">
          <label for="bedrooms" class="form-label">Neighborhood</label>
          <input
            type="text"
            class="form-control"
            id="bedrooms"
            name="bedrooms"
            placeholder="Bedrooms"
            required
          />
        </div>
        <div class="mb-3">
          <label for="beds" class="form-label">Neighborhood</label>
          <input
            type="text"
            class="form-control"
            id="beds"
            name="beds"
            placeholder="Beds"
            required
          />
        </div>
        <div class="mb-3">
          <label for="beds" class="form-label">Geography Coordinates</label>
          <input
            type="text"
            class="form-control"
            id="latitude"
            name="latitude"
            placeholder="Latitude"
            required
          />
          <input
            type="text"
            class="form-control"
            id="longitude"
            name="longitude"
            placeholder="Longitude"
            required
          />
        </div>
        <div class="mb-3">
          <label for="bathrooms" class="form-label">Property type </label>
          <input
            type="text"
            class="form-control"
            id="bathrooms"
            name="bathrooms"
            placeholder="Bathrooms"
            required
          />
        </div>
        <div class="mb-3">
          <label for="bathrooms" class="form-label">Room type </label>
          <input
            type="text"
            class="form-control"
            id="room_type"
            name="room_type"
            placeholder="Room type"
            required
          />
        </div>
        <div class="mb-3">
          <label for="bathrooms" class="form-label">Review</label>
          <input
            type="text"
            class="form-control"
            id="room_type"
            name="room_type"
            placeholder="Room type"
            required
          />
          <input
            type="text"
            class="form-control"
            id="room_type"
            name="room_type"
            placeholder="Room type"
            required
          />
        </div>
        <div class="mb-3">
          <label for="bathrooms" class="form-label">Room type </label>
          <input
            type="text"
            class="form-control"
            id="room_type"
            name="room_type"
            placeholder="Room type"
            required
          />
        </div>
        <div class="mb-3">
          <label for="bathrooms" class="form-label">Bathrooms</label>
          <input
            type="text"
            class="form-control"
            id="property_type"
            name="property_type"
            placeholder="Property type"
            required
          />
        </div>
        <div class="mb-3">
          <label for="availability_365" class="form-label">Neighborhood</label>
          <input
            type="text"
            class="form-control"
            id="availability_365"
            name="availability_365"
            placeholder="Availability 365"
            required
          />
        </div>
        <div class="mb-3">
          <label for="neighborhood" class="form-label">Neighborhood</label>
          <input
            type="text"
            class="form-control"
            id="neighborhood"
            name="neighborhood"
            placeholder="Neighborhood"
            required
          />
        </div>
        <div class="mb-3">
          <label for="picture_url" class="form-label">Picture URL</label>
          <input
            type="url"
            class="form-control"
            id="picture_url"
            name="picture_url"
            placeholder="https://example.com/image.jpg"
            required
          />
        </div>
        <div class="mb-3">
          <label for="price" class="form-label">Price</label>
          <input
            type="number"
            class="form-control"
            id="price"
            name="price"
            placeholder="Price"
            required
          />
        </div>
        <div class="mb-3">
          <label for="host_id" class="form-label">Select Host</label>
          <input
            type="text"
            class="form-control"
            id="host_id"
            name="host_id"
            placeholder="Type to Search Hosts"
            list="hosts"
            required
          />
          <datalist id="hosts">
            <% for (let host of hosts) { %>
            <option value="<%= host.host_id %>">
              <%= host.host_name %> (Host ID: <%= host.host_id %>)
            </option>
            <% } %>
          </datalist>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>

    <%- include('./partials/footer') %>
  </body>
</html>
